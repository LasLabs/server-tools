<template>

    <t t-name="red_october.FormPasswordChange">
        <form id="roPasswordChangeForm"
              method="POST"
              t-attf-action="/red_october/profile/{{ profile.id }}/password_change"
              >
            <input type="hidden"
                   name="csrf_token"
                   t-att-value="csrf_token" />
            <div class="form-group">
                <label for="password_current">
                    Current Password
                </label>
                <input type="password"
                       name="password_current"
                       class="form-control"
                       required="" />
            </div>
            <div class="form-group">
                <label for="password_current">
                    New Password
                </label>
                <input type="password"
                       name="password_new"
                       class="form-control"
                       required="" />
            </div>
            <div class="form-group">
                <label for="password_current">
                    Repeat New Password
                </label>
                <input type="password"
                       name="password_validate"
                       class="form-control"
                       required="" />
            </div>
            <div class="form_result text-center" />
        </form>
    </t>

</template>
