<template>

    <t t-name="red_october.FormPasswordGet">
        <form id="roPasswordGetForm"
              method="POST"
              >
            <input type="hidden"
                   name="csrf_token"
                   t-att-value="csrf_token" />
            <div class="form-group">
                <label for="password">
                    Password
                </label>
                <input type="password"
                       name="password"
                       class="form-control"
                       required="" />
            </div>
            <div class="form_result text-center" />
        </form>
    </t>

</template>
