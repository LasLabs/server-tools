<template>

    <t t-name="red_october.ModalPasswordChange">
        <form id="roPasswordChangeForm">
            <input type="hidden"
                   name="csrf_token"
                   t-att-value="request.csrf_token()" />
            <div class="form-group">
                <label for="password_current">
                    Current Password
                </label>
                <input type="password"
                       name="password_current"
                       class="form-control"
                       required="" />
            </div>
            <div class="form-group">
                <label for="password_current">
                    New Password
                </label>
                <input type="password"
                       name="password_new"
                       class="form-control"
                       required="" />
            </div>
            <div class="form-group">
                <label for="password_current">
                    Repeat New Password
                </label>
                <input type="password"
                       name="password_validate"
                       class="form-control"
                       required="" />
            </div>
        </form>
    </t>

</template>
