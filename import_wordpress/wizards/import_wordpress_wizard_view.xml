<?xml version="1.0"?>
<odoo>

        <record id="import_wordpress_wizard_view_form" model="ir.ui.view">
            <field name="name">import.wordpress.wizard.view.form</field>
            <field name="model">import.wordpress.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Wordpress Blog">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="uri" />
                            <field name="blog_id" />
                            <field name="username" />
                            <field name="password" password="True"/>
                        </group>
                        <footer>
                            <button class="oe_stat_button"
                                    name="to_odoo"
                                    string="Import"
	                                type="object" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="import_wordpress_wizard_action" model="ir.actions.act_window">
            <field name="name">Import Wordpress</field>
            <field name="res_model">import.wordpress.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="import_wordpress_wizard_view_form"/>
        </record>

        <menuitem name="Import Wordpress"
                  id="import_wordpress_wizard_menu"
                  parent="base.next_id_9"
                  action="import_wordpress_wizard_action"/>
</odoo>
